@model yelizuyar.Models.EmailModel.EmailSenderViewModel
@{
    ViewData["Title"] = "contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .acod-head a:after {
        font-family: 'Font Awesome 5 Free';
        font-weight: 600;
        content: "\f068";
        float: right;
        color: #EFBB20;
        font-size: 14px;
        position: absolute;
        right: 12px;
        display: none;
        top: 12px;
    }

    .dez-bnr-inr {
        height: 340px;
        background-size: cover;
        background-position: bottom;
        display: table;
        width: 100%;
        text-align: center;
    }

    .content-inner {
        padding-top: 40px;
        padding-bottom: 40px;
    }

    .header-nav .nav > li .sub-menu {
        background-color: #ffffff;
        display: block;
        left: 0;
        list-style: none;
        opacity: 0;
        padding: 5px 0;
        position: absolute;
        visibility: hidden;
        width: 298px;
        z-index: 10;
    }
</style>

<div class="dez-bnr-inr" style="background-image:url(https://uploads.yogaintown.co.uk/images/bg-my.jpg);">
    <div class="container">
        <div class="dez-bnr-inr-entry">
            <h1 style="color: #6a4b21; margin-bottom: 0px;">Contact</h1>
        </div>
    </div>
</div>
<!-- inner page banner END -->
<!-- Breadcrumb row -->
<div class="breadcrumb-row">
    <div class="container">
        <ul class="list-inline">
            <li><a href="/home/homepage">Home</a></li>
            <li>Contact</li>
        </ul>
    </div>
</div>

<div class="section-full content-inner bg-white contact-style-1">
    <div class="container">
        <div class="row">
            <!-- right part start -->
            <div class="col-lg-4 d-lg-flex">
                <div class="p-a30 m-b30 border-1 contact-area align-self-stretch">
                    <h2 class="m-b10">Quick Contact</h2>
                    <p>If you have any questions simply use the following contact details.</p>
                    <ul class="no-margin">
                        <li class="icon-bx-wraper left m-b30">
                            <div class="icon-bx-xs border-1"> <a href="#" class="icon-cell"><i class="fas fa-map-marker-alt"></i></a> </div>
                            <div class="icon-content">
                                <h6 class="text-uppercase m-tb0 dez-tilte">Address:</h6>
                                <p>
                                    99 Sergeant Way ST17 0WE STAFFORD
                                </p>
                            </div>
                        </li>
                        <li class="icon-bx-wraper left  m-b30">
                            <div class="icon-bx-xs border-1"> <a href="#" class="icon-cell"><i class="fas fa-envelope"></i></a> </div>
                            <div class="icon-content">
                                <h6 class="text-uppercase m-tb0 dez-tilte">Email:</h6>
                                <p>yogainstafford@gmail.com</p>
                            </div>
                        </li>
                        <li class="icon-bx-wraper left">
                            <div class="icon-bx-xs border-1"> <a href="#" class="icon-cell"><i class="fas fa-phone-alt"></i></a> </div>
                            <div class="icon-content">
                                <h6 class="text-uppercase m-tb0 dez-tilte">Phone:</h6>
                                <p>+ 44 7908 852 168</p>
                            </div>
                        </li>
                    </ul>      
                </div>
            </div>
            <!-- right part END -->
            <!-- Left part start -->
            <div class="col-lg-8">
                <div class="p-a30 bg-gray clearfix m-b30 ">
                    <h2>Send Message Us</h2>
                    <div class="dzFormMsg"></div>
                    <form method="post" action="@Url.Action("sendform","home")">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" name="namesurname" asp-for="namesurname" required class="form-control" placeholder="Your Name">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="email" name="email" asp-for="email" class="form-control" required placeholder="Your Email">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="tel" name="phone" asp-for="phone" required class="form-control" placeholder="Phone">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" name="subject" asp-for="subject" required class="form-control" placeholder="Subject">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="input-group">
                                        <textarea name="content" asp-for="content" rows="4" class="form-control" required placeholder="Your Message..."></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <button name="submit" type="submit" value="Submit" class="site-button"> <span>Submit</span> </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Left part END -->
        </div>
    </div>
</div>
